<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_standard_new"
        android:background="@color/itemText_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.8"
            android:background="@color/item_background">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rzp_green_button" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tScreenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_control"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control"
                android:text="Screen001"
                android:textAppearance="@style/FontSemiBold"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_size_normal"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Time Distribution:"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tTimeDistribution"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="9AM - 5PM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="M/F Ratio :"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tGenderRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="56%"
                    android:textColor="@color/blacklight"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Age Distribution :"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tAgeDistributtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-60dp"
                    android:text="\nBelow 18 = 24%\n18-24 = 30%\n25-34 = 40%\n.."
                    android:textColor="@color/blacklight"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Screen Size :"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tScreenSize"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="46*65"
                    android:textColor="@color/blacklight"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_control"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_control">

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="No of days *"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />
                <TextView
                    android:id="@+id/tvOriginalPr"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text=" SPD :"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tScreenPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/FontMedium"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textSize="@dimen/font_size_normal"
                    android:text="â‚¹ 50"
                    android:layout_marginStart="@dimen/spacing_control"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_width"
                android:layout_marginTop="@dimen/spacing_control"
                android:background="@color/view_color" />

            <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llMoveTocart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_standard"
                    android:paddingBottom="@dimen/spacing_standard"
                    android:visibility="visible">

                    <TextView
                        style="@style/CartButton"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="*SPD: Screen Price Per Day"
                        android:textSize="@dimen/font_size_micro"/>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/spacing_control_half"
                    android:layout_marginTop="@dimen/spacing_control_half"
                    android:layout_marginBottom="@dimen/spacing_control_half"
                    android:background="@color/view_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llRemove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_standard"
                    android:paddingBottom="@dimen/spacing_standard">

                    <TextView
                        style="@style/CartButton"
                        android:drawableLeft="@drawable/ic_delete"
                        android:text="@string/lbl_remove" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
