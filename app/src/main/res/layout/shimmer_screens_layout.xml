<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/locationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardView.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                >


                <RadioButton
                    android:id="@+id/screenSelectButton"
                    android:layout_marginStart="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:layout_height="@dimen/_62sdp"
                    android:gravity="top" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/screenTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="................."
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_size_large"
                        />
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/screenTitle"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/font_size_micro"
                        android:text="............................."
                        />
                    <TextView
                        android:id="@+id/screenStatus"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/screenTitle"
                        android:layout_marginStart="@dimen/_65sdp"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/green"
                        android:textSize="@dimen/font_size_micro"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/locationTitle"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/screenStatus"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/font_size_micro"
                        android:text="............................."
                        />
                    <TextView
                        android:id="@+id/addressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/locationTitle"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/font_size_micro"
                        android:text="............................."
                        />

                    <TextView
                        android:id="@+id/screen_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_size_large"
                        android:text="......"
                        />


                    <ImageButton
                        android:id="@+id/expandBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#FFF"
                        android:src="@drawable/ic_arrow_down" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@+id/linearLayoutHolder"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="#88888888" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>