<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">
        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/adView"
            android:layout_below="@+id/appBar"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/spacing_standard_new">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cat_7"
                    android:minHeight="@dimen/_100sdp">

                    <TextView
                        android:id="@+id/Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text="Wallet balance"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/commonColorWhite"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:text="$ 800.00"
                        android:textAppearance="@style/FontBold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_xxxlarge" />

                    <TextView
android:id="@+id/viewAllTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_standard_new"
                        android:layout_marginTop="@dimen/_76sdp"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="VIEW ALL TRANSACTIONS"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/color_selected"
                        android:textSize="@dimen/font_size_small" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/txtDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Add money to Wallet"
                    android:textAppearance="@style/FontMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:id="@+id/tvVerifyHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="We suggest an average balance of $1000"
                    android:textAppearance="@style/FontMedium"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_micro" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stroke_width"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_16sdp"

                    android:background="@color/view_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"

                    android:layout_marginEnd="@dimen/spacing_standard_new"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="\u20B9"
                        android:layout_gravity="left"
                        android:textColor="#222"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/addAmount"
                        style="@style/TextInputEditTextStyle"
                        android:textAlignment="viewStart"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_marginTop="-40dp"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="@dimen/font_size_xlarge"
                        />





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="-50dp"
                        android:layout_marginEnd="@dimen/_38sdp"
                        android:paddingStart="@dimen/spacing_middle"
                        android:paddingEnd="@dimen/spacing_middle"
                        android:text="Amount"
                        android:visibility="gone"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/font_size_small" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:text="$1,500.00"
                        android:textAppearance="@style/FontBold"
                        android:textColor="@color/green"
                        android:textSize="@dimen/font_size_large" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stroke_width"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_16sdp"

                    android:background="@color/view_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginEnd="@dimen/spacing_standard_new"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text="Click here if wallet not updated"
                        android:textAllCaps="true"
                        android:drawableEnd="@drawable/ic_baseline_refresh_24"
                        android:textAppearance="@style/FontBold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font_size_small" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="miraivizion@upi"
                        android:textAppearance="@style/FontMedium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_large" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stroke_width"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@color/view_color" />


                <com.google.android.material.button.MaterialButton

                    style="@style/MaterialButtonStyle.Stroked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/spacing_standard_new"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:text="ADD MONEY" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
