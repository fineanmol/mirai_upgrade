<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_standard"
    android:layout_marginEnd="@dimen/spacing_standard"
    android:layout_marginBottom="@dimen/spacing_standard"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tIcon"
            android:layout_marginTop="@dimen/spacing_middle"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_44sdp"
            android:background="@color/item_background"
            android:contentDescription="@string/text_todo"
            android:padding="@dimen/_1sdp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="-62dp"
            android:layout_marginStart="@dimen/_45sdp"
            android:paddingTop="@dimen/spacing_control"
            android:paddingBottom="@dimen/spacing_standard">

            <TextView
                android:id="@+id/tTransactionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Money Added to Wallet"
                android:textAppearance="@style/FontSemiBold"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_size_small" />
            <TextView
                android:id="@+id/tAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:layout_marginStart="@dimen/_165sdp"
                android:text="+ \u20B9 437"
                android:textAppearance="@style/FontSemiBold"
                android:textColor="@color/green"
                android:textSize="@dimen/font_size_small" />
            <TextView
                android:id="@+id/tRightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_marginStart="@dimen/_205sdp"
                android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:textAppearance="@style/FontSemiBold"
                android:textColor="@color/green"
              />

            <TextView
                android:id="@+id/tPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tTransactionText"
                android:layout_marginTop="@dimen/spacing_middle"
                android:text="Payment Id\npay_wyueyuwyue"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_small"
                tools:text="Payment Id pay_wyueyuwyue" />


        </RelativeLayout>
        <TextView
            android:layout_marginStart="@dimen/_45sdp"
            android:id="@+id/tDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Tuesday, Mar 17,2020"
            android:textAppearance="@style/FontSemiBold"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_size_micro" />

    </LinearLayout>

</LinearLayout>