<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMainOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:ignore="MissingPrefix"
    android:orientation="horizontal">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_standard_new"
            android:layout_marginEnd="@dimen/spacing_standard_new"
            android:layout_marginBottom="@dimen/spacing_standard_new"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_14sdp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_14sdp"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/ivBannerPrev"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tvBannerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_size_normal"
                    android:textAppearance="@style/FontSemiBold"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    />
                <TextView
                    android:id="@+id/tvBannerEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_small"
                    android:textAppearance="@style/FontMedium"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginBottom="@dimen/spacing_middle" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/txt_review_layout"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_review_shape_black"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pending Review"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>